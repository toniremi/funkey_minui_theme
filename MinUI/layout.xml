<layout width="240" height="240" font="Nunito-Medium.ttf" loadFontSize="14"
    fontColor="ffffff">

    <!-- Sounds -->
    <sound type="load"      src="sounds/load.wav"/>
    <sound type="unload"    src="sounds/unload.wav"/>
    <sound type="highlight" src="sounds/highlight.wav"/>
    <sound type="select"    src="sounds/select.wav"/>

    <!-- Background Image -->
    <!-- It has to be inside the images folder and be called back1.png -->
    <!--This is the image for the bottom bar -->
    <image src="images/back1.png" backgroundColor="000000" alpha="1" backgroundAlpha="1" x="0"
        y="210" height="30" width="stretch" layer="3">
        <onMenuEnter menuIndex="0">
            <set duration=".01">
                <animate type="alpha" from="0" to="1" algorithm="linear" />
            </set>
        </onMenuEnter>
        <onMenuExit menuIndex="0">
            <set duration=".01">
                <animate type="alpha" from="1" to="0" algorithm="linear" />
            </set>
        </onMenuExit>
    </image>

    <!-- Battery Indicator-->
    <battery reloadPeriod="3" fontColor="ffffff" alpha="0" x="right" xOrigin="right" xOffset="-5"
        y="top" yOrigin="center" yOffset="13" layer="14">
        <!-- Enter/Exit Animations -->
        <onEnter>
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onEnter>
        <onExit>
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onExit>
        <onMenuEnter menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
        <onMenuExit menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
        <onGameEnter menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onGameEnter>
        <onGameExit menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onGameExit>
    </battery>

    <!-- Battery Indicator Background -->
    <image src="images/battery_bg.png" alpha="1" x="195" y="0" height="26" width="44" layer="13">
        <!-- Enter/Exit Animations -->
        <onEnter>
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onEnter>
        <onExit>
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onExit>
        <onMenuEnter menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
        <onMenuExit menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
        <onGameEnter menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="0" />
            </set>
        </onGameEnter>
        <onGameExit menuIndex="0">
            <set duration=".3">
                <animate type="alpha" to="1" />
            </set>
        </onGameExit>
    </image>

    <!-- Main Menu -->
    <!-- Main Menu (Systems List) -->

    <!-- Create a scrollable text for the selected system -->
    <!-- added a bit of a negative yOffset to make it look centered in the space since font and size is different -->
    <reloadableScrollingText type="title" alpha="1" x="6" y="90" xOrigin="left" xOffset="0"
        yOffset="-5" maxWidth="240" height="30" menuScrollReload="true" font="Nunito-Bold.ttf" fontSize="24"
        loadFontSize="24" fontColor="ffffff" direction="horizontal" scrollingSpeed="60"
        startPosition="0" startTime="1.5" endTime="1.5" layer="5">
        <onMenuEnter menuIndex="0">
            <set duration=".01">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
        <onMenuExit menuIndex="0">
            <set duration=".01">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
    </reloadableScrollingText>

    <!--Main Menu - Index 0-->
    <!-- This is the Main Menu that displays the systems in a vertical list -->
    <!-- Create a custom vertical menu that will contain text items inside -->
    <menu type="custom" mode="layout" scrollTime=".20" scrollAcceleration=".04" minScrollTime=".15"
        orientation="vertical" x="left" width="stretch" y="0" yOffset="0" algorithm="linear">
        <!-- itemDefaults allow you to set default attributes for all items in a menu list. An item
        may still have its own attributes that override the defaults -->
        <itemDefaults alpha="1" x="6" y="1" xOrigin="left" xOffset="0" layer="2" height="30"
            maxWidth="240" font="Nunito-Medium.ttf" fontSize="18" loadFontSize="18" fontColor="bbbbbb">
        </itemDefaults>

        <!-- In this menu each item is placed. notice that the first and last item of this menu are
        alpha="0" if this is not done you would see the last time of the menu move to be the first
        when scrolling. -->
        <item yOffset="-30" alpha="0" />
        <item yOffset="0" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="30" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="60" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>

        <!-- the selected item is hidden since we use the reloadableScrollingText above for the selected item -->
        <item yOffset="90" selected="true" alpha="0">
        </item>

        <item yOffset="120" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="150" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="180" alpha="1">
            <onMenuEnter menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="0">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="210" alpha="0" />

    </menu>

    <!-- Sub Menu -->
    <!-- Sub Menu (Games List) -->

    <!-- Sub Menu Background images -->

    <!-- Sub Menu Background image to place System name -->
    <image src="images/fullbar_w.png" height="30" width="240" alpha="0" x="left" yOffset="0"
        xOrigin="left" yOrigin="0" layer="3">
        <onMenuExit menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
        <onMenuEnter menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
    </image>

    <!--Bottom Bar with button Background for Game List -->
    <image src="images/back2.png" backgroundColor="000000" alpha="0" x="0" y="210" height="30"
        width="stretch" layer="3">
        <onMenuExit menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
        <onMenuEnter menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
    </image>

    <!-- The system title at the top of the game list -->
    <reloadableText type="collectionName" alpha="0" x="6" y="0" xOrigin="left" xOffset="0" layer="4"
        height="30" maxWidth="240" font="Nunito-Bold.ttf" fontSize="24" loadFontSize="24" fontColor="000000">
        <onMenuExit menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
        <onMenuEnter menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
    </reloadableText>

    <!--Scrollable Text for the selected game title-->
    <!-- added a bit of a negative yOffset to make it look centered in the space since font and size is different -->
    <reloadableScrollingText type="title" alpha="0" x="6" y="90" xOrigin="left" xOffset="0"
        yOffset="-5" maxWidth="240" height="30" menuScrollReload="true" font="Nunito-Bold.ttf" fontSize="22"
        loadFontSize="22" fontColor="ffffff" direction="horizontal" scrollingSpeed="60"
        startPosition="0" startTime="1.5" endTime="1.5" layer="5">
        <onMenuEnter menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="1" />
            </set>
        </onMenuEnter>
        <onMenuExit menuIndex="1">
            <set duration=".01">
                <animate type="alpha" to="0" />
            </set>
        </onMenuExit>
    </reloadableScrollingText>

    <!-- This is the Sub Menu that displays the games in a vertical list -->
    <!-- Create a custom vertical menu that will contain text items inside -->
    <menu type="custom" mode="layout" scrollTime=".20" scrollAcceleration=".04"
        orientation="vertical" x="left" width="stretch" y="0" yOffset="0" algorithm="linear">
        <!-- itemDefaults allow you to set default attributes for all items in a menu list. An item
        may still have its own attributes that override the defaults -->
        <itemDefaults alpha="1" x="6" y="1" xOrigin="left" xOffset="0" layer="2" height="30"
            maxWidth="240" font="Nunito-Medium.ttf" fontSize="16" loadFontSize="16" fontColor="aaaaaa">
        </itemDefaults>

        <!-- In this menu each item is placed. notice that the first and last item of this menu are
        alpha="0" if this is not done you would see the last time of the menu move to be the first
        when scrolling. -->
        <item yOffset="0" alpha="0" />
        <item yOffset="30" alpha="1">
            <onMenuEnter menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="60" alpha="1">
            <onMenuEnter menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="90" selected="true" alpha="0">
        </item>
        <item yOffset="120" alpha="1">
            <onMenuEnter menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="150" alpha="1">
            <onMenuEnter menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="180" alpha="1">
            <onMenuEnter menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="0" to="1" algorithm="linear" />
                </set>
            </onMenuEnter>
            <onMenuExit menuIndex="1">
                <set duration=".01">
                    <animate type="alpha" from="1" to="0" algorithm="linear" />
                </set>
            </onMenuExit>
        </item>
        <item yOffset="210" alpha="0" />

    </menu>

</layout>
